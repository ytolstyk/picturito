<div class="profile-picture-container">
  <a href="#/picture/<%= picture.escape('id') %>">
    <img src="<%= picture.escape('image_url_small') %>">
  </a>
</div>

<div class="profile-picture-edit-wrapper">
  <form class="profile-picture-edit">
    <div class="form-group">
      <input type="text" class="form-control edit-title" value='<%= picture.escape("title") %>'>
    </div>

    <div class="form-group">
      <textarea class="form-control edit-description" rows="3"><%= picture.escape("description") %></textarea>
    </div>

    <button type="submit" class="btn btn-default">Edit</button>
  </form>
</div>

<div class="delete-picture">x</div>