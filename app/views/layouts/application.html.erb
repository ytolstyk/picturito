<!DOCTYPE html>
<html>
<head>
  <title>Picturito</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav>
  <% if current_user %>
    <ul>
      <li><%= link_to "Home", pictures_url %></li>
      <li>Activities</li>
      <li><%= link_to "Profile", user_url(current_user) %></li>
      <li><%= link_to "Upload", new_picture_url %></li>
    </ul>
    <ul>
      <li><%= button_to "Sign out", session_url, method: :delete %></li>
    </ul>
  <% else %>
    <ul>
      <li><%= link_to "Sign in", new_session_url %></li>
      <li><%= link_to "Sign up", new_user_url %></li>
    </ul>
  <% end %>
</nav>

<% if flash[:errors] %>
  <ul class="flash-errors">
    <% flash[:errors].try(:each) do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= yield %>

</body>
</html>
